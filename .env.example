# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/solwars"

# Solana Configuration
SOLANA_RPC_URL="https://api.mainnet-beta.solana.com"
HELIUS_RPC_URL="https://rpc.helius.xyz/?api-key=your-helius-api-key"
SWARS_TOKEN_MINT="YOUR_SWARS_TOKEN_MINT_ADDRESS"

# Treasury Wallet Configuration (for SOL prize distribution)
# Generate a new keypair with: solana-keygen new --outfile treasury-keypair.json
# Get the base58 private key with: solana-keygen export treasury-keypair.json
TREASURY_PRIVATE_KEY="your-base58-encoded-private-key-here"

# API Keys
HELIUS_API_KEY="your_helius_api_key"
HELIUS_API_URL="https://api.helius.xyz/v0"

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Secret (generate a random string)
JWT_SECRET="your_super_secret_jwt_key_here"

# Tournament Configuration
DEFAULT_TOURNAMENT_ENTRY_FEE_SOL=0.01
DEFAULT_TOURNAMENT_ENTRY_FEE_SWARS=100
TOURNAMENT_PRIZE_POOL_PERCENTAGE=0.9
PLATFORM_FEE_PERCENTAGE=0.1

# SWARS Token Configuration
DAILY_BONUS_MIN=10
DAILY_BONUS_MAX=50
TOURNAMENT_REWARD_MULTIPLIER=1.5

# Rate Limiting
PRICE_UPDATE_INTERVAL=30000
TOURNAMENT_UPDATE_INTERVAL=60000
